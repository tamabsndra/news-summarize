# News Summarizer API Configuration
# Copy this file to .env and update the values

# Security Settings
API_KEY=your-secure-api-key-here-please-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-please-change-this

# Rate Limiting
RATE_LIMIT_REQUESTS=5/minute
RATE_LIMIT_BURST=10/hour

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Redis Configuration (for advanced rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Model Configuration
MODEL_CACHE_DIR=./models
MAX_CONCURRENT_TASKS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Health Check
HEALTH_CHECK_INTERVAL=30
